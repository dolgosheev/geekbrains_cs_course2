<UserControl x:Class="Office.ControlForms.ControlDepartment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Office.ControlForms" d:DataContext="{d:DesignInstance Type=local:ControlDepartment}"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Label Content="Id" Margin="10,10,198,0" Height="26" VerticalAlignment="Top" />
        <TextBox 
            x:Name="TextBoxId" 
            Text="{Binding Department.Id}"
            Margin="107,10,10,0" TextWrapping="Wrap" Height="24" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Title" Margin="10,40,198,0" Height="26" VerticalAlignment="Top" />
        <TextBox 
            x:Name="TextBoxTitle" 
            Text="{Binding Department.Title}"
            Margin="107,40,10,0" TextWrapping="Wrap" Height="24" VerticalAlignment="Top"/>
        <Label Content="Description" Margin="10,68,198,0" Height="26" VerticalAlignment="Top" />
        <TextBox 
            x:Name="TextBoxDescription" 
            Text="{Binding Department.Description}"
            Margin="107,68,10,0" TextWrapping="Wrap" Height="24" VerticalAlignment="Top"/>
        

    </Grid>
</UserControl>
